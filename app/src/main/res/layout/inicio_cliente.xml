<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo_cliente"
    tools:context=".InicioCliente">

    <TextView
        android:id="@+id/textView_MIC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="100dp"
        android:text="@string/menu_cliente"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_MIC_MisSolicitudes"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="80dp"
        android:text="@string/mis_solicitudes"
        app:layout_constraintEnd_toEndOf="@+id/imageView_MIC"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="@+id/imageView_MIC"
        app:layout_constraintTop_toBottomOf="@+id/imageView_MIC" />

    <Button
        android:id="@+id/button_MIC_Opciones"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:text="@string/opciones"
        app:layout_constraintEnd_toEndOf="@+id/button_MIC_MisSolicitudes"
        app:layout_constraintStart_toStartOf="@+id/button_MIC_MisSolicitudes"
        app:layout_constraintTop_toBottomOf="@+id/button_MIC_MisSolicitudes" />

    <Button
        android:id="@+id/button_MIC_Salir"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:text="@string/salir"
        app:layout_constraintEnd_toEndOf="@+id/button_MIC_Opciones"
        app:layout_constraintStart_toStartOf="@+id/button_MIC_Opciones"
        app:layout_constraintTop_toBottomOf="@+id/button_MIC_Opciones" />

    <ImageView
        android:id="@+id/imageView_MIC"
        android:layout_width="233dp"
        android:layout_height="216dp"
        android:layout_marginTop="32dp"
        android:src="@mipmap/cliente"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/textView_MIC"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="@+id/textView_MIC"
        app:layout_constraintTop_toBottomOf="@id/textView_MIC" />

    <TextView
        android:id="@+id/textView_MIC_SesionActual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Sesion Actual"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
